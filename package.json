{
  "name": "@dr.pogodin/react-native-static-server",
  "version": "0.8.0",
  "description": "HTTP static file server for React Native",
  "main": "lib/commonjs/index",
  "module": "lib/module/index",
  "types": "lib/typescript/index.d.ts",
  "react-native": "src/index",
  "source": "src/index",
  "scripts": {
    "test": "npm run lint && npm run typecheck",
    "typecheck": "tsc --noEmit",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "prepack": "bob build",
    "bootstrap": "cd example && npm install --force",
    "clean": "del-cli android/build example/android/build example/android/app/build example/ios/build",
    "windows": "react-native run-windows"
  },
  "keywords": [
    "react-native",
    "ios",
    "android",
    "lighttpd",
    "windows",
    "embed",
    "server",
    "http",
    "https",
    "react"
  ],
  "repository": "https://github.com/birdofpreyru/react-native-static-server",
  "author": "Dr. Sergey Pogodin <doc@pogodin.studio> (https://dr.pogodin.studio)",
  "license": "MIT",
  "licenseFilename": "LICENSE.md",
  "readmeFilename": "README.md",
  "bugs": {
    "url": "https://github.com/birdofpreyru/react-native-static-server/issues"
  },
  "homepage": "https://dr.pogodin.studio/docs/react-native-static-server",
  "title": "React Native Static Server",
  "devDependencies": {
    "@react-native/eslint-config": "^0.72.2",
    "@react-native/metro-config": "^0.72.7",
    "@types/jest": "^29.5.2",
    "@types/react": "^18.2.14",
    "@types/uuid": "^9.0.2",
    "del-cli": "^5.0.0",
    "eslint": "^8.44.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^29.5.0",
    "pod-install": "^0.1.38",
    "prettier": "^2.8.8",
    "react": "18.2.0",
    "react-native": "0.72.1",
    "react-native-device-info": "^10.7.0",
    "react-native-fs": "^2.20.0",
    "react-native-builder-bob": "^0.21.0",
    "react-native-windows": "^0.72.0",
    "typescript": "^5.1.6"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*",
    "react-native-device-info": "^10",
    "react-native-fs": "^2.20"
  },
  "engines": {
    "node": ">= 16.0.0"
  },
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/"
    ]
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@react-native",
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "quoteProps": "consistent",
          "singleQuote": true,
          "tabWidth": 2,
          "trailingComma": "all",
          "useTabs": false
        }
      ]
    }
  },
  "eslintIgnore": [
    "node_modules/",
    "lib/"
  ],
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all",
    "useTabs": false
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  },
  "codegenConfig": {
    "name": "RNReactNativeStaticServerSpec",
    "type": "modules",
    "jsSrcsDir": "src",
    "windows": {
      "namespace": "ReactNativeStaticServer"
    }
  },
  "dependencies": {
    "@dr.pogodin/js-utils": "^0.0.6"
  }
}
