{
  "name": "@dr.pogodin/react-native-static-server",
  "version": "0.7.0-alpha.6",
  "description": "HTTP static file server for React Native",
  "main": "lib/commonjs/index",
  "module": "lib/module/index",
  "types": "lib/typescript/index.d.ts",
  "react-native": "src/index",
  "source": "src/index",
  "scripts": {
    "android:generate-specs": "cd android && ./gradlew generateCodegenArtifactsFromSchema -PnewArchEnabled=true",
    "ios:generate-schema": "rimraf ios/NativeStaticServerSpec && mkdir -p ios/NativeStaticServerSpec && node ./node_modules/react-native-codegen/lib/cli/combine/combine-js-to-schema-cli.js ./ios/NativeStaticServerSpec/schema.json src",
    "ios:generate-specs": "npm run ios:generate-schema && node ./node_modules/react-native/scripts/generate-specs-cli.js --platform ios --schemaPath ./ios/NativeStaticServerSpec/schema.json --outputDir ./ios/NativeStaticServerSpec --libraryName NativeStaticServerSpec --libraryType modules",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "prepare": "bob build",
    "test": "npm run lint",
    "typescript": "tsc --noEmit"
  },
  "keywords": [
    "android",
    "file",
    "ios",
    "javascript",
    "js",
    "mobile",
    "native",
    "react",
    "reactjs",
    "server",
    "static"
  ],
  "repository": "github:birdofpreyru/react-native-static-server",
  "author": "Dr. Sergey Pogodin <doc@pogodin.studio> (https://dr.pogodin.studio)",
  "license": "MIT",
  "licenseFilename": "LICENSE.md",
  "readmeFilename": "README.md",
  "bugs": {
    "url": "https://github.com/birdofpreyru/react-native-static-server/issues"
  },
  "homepage": "https://dr.pogodin.studio/docs/react-native-static-server",
  "title": "React Native Static Server",
  "devDependencies": {
    "@react-native-community/eslint-config": "^3.2.0",
    "@types/jest": "^29.2.6",
    "@types/react": "^18.0.27",
    "@types/react-native": "^0.70.9",
    "eslint": "^8.32.0",
    "eslint-plugin-flowtype": "^8.0.3",
    "eslint-plugin-react-native": "^4.0.0",
    "jest": "^29.3.1",
    "pod-install": "^0.1.38",
    "react": "^18.1.0",
    "react-native": "^0.70.6",
    "react-native-builder-bob": "^0.20.3",
    "typescript": "^4.9.4"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  },
  "codegenConfig": {
    "name": "NativeStaticServerSpec",
    "type": "modules",
    "jsSrcsDir": "src",
    "android": {
      "javaPackageName": "com.futurepress.staticserver"
    }
  },
  "dependencies": {
    "react-native-fs": "^2.20.0"
  }
}
